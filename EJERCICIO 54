
onda = int(input("Introduce un valor para una longitud de onda de luz visible en nanÃ³metros: "))

color = ""

if onda >= 350 and onda < 450:
	color = "violet"
elif onda >= 450 and onda < 495:
	color = "blue"
elif onda >= 495 and onda < 570:
	color = "green"
elif onda >= 570 and onda < 590:
	color = "yellow"
elif onda >= 590 and onda < 620:
	color = "orange"
elif onda >= 620 and onda <= 750:
	color = "red"
	
if color != "":
	print("Esta longitud de onda tiene el color:  ",(color))
else:
	print("Esta longitud de onda estÃ¡ fuera del espectro de la luz visible.")
